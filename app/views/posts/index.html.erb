<div class="row">
  <div class="col-md-1 border-contrast-right vh-100">
  </div>
  <div class="col-md-10">    
    <% @posts.each do |post| %>
      <div class="row mb-4">
        <div class="col-md-2 text-muted">
          <%= post.created_at.strftime("%b %d, %Y") %>
        </div>
        <div class="col-md-10">
          <h4><%= link_to post.title, post_path(post), class: "text-light" %></h4>
          <p class="text-secondary"><%= truncate(post.body, length: 150, separator: ' ') %></p>
        </div>
      </div>
      <hr class="border-secondary">
    <% end %>
  </div>
</div>
