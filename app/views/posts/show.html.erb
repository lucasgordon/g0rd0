<div class="container py-5">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card bg-dark text-light mb-4">
    <div class="card-body">
      <%= render @post %>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary" %>
    <%= link_to "Back to posts", posts_path, class: "btn btn-outline-light" %>
    <%= button_to "Delete this post", @post, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this post?" } } %>
  </div>
</div>
